<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (players.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Position</th>
                        <th scope="col">Number</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < players.length; i++) { %>
                        <tr>
                            <th scope="row"><%= players[i].id %></th>
                            <td><%= players[i].first_name %></td>
                            <td><%= players[i].last_name %></td>
                            <td><%= players[i].position %></td>
                            <td><%= players[i].number %></td>
                            <td>
                                <a href="/edit/<%= players[i].id %>" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= players[i].id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/add" >here</a> to add players.</p>
        <% } %>
    </div>
</div>
</body>
</html>